@section Scripts{

    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.2/axios.min.js"></script>
    <script>
        const webApi = "https://localhost:7240"
        const appVue = new Vue({
            el: "#appVue",
            name: "appVue",
            data: {
                interestDatas: [],
                Id: sessionStorage.getItem("EmpId"),
                status: 0,
                application: [],
                focus: [],
                vacancy: [],
                blackList: [],

                datas: [],
                van: [],
                dVan: [],
                advertiseArray: [],
            },
            mounted: function () {
                let _this = this;
                _this.Information();
                _this.Vacancies();
                _this.Login();
                _this.advertise();
            },
            methods: {
                Information: function () {
                    let _this = this;
                    axios.get(`${webApi}/api/EnterpriseInterests`, {
                        params: {
                            id: _this.Id,
                            status: _this.status,
                        }
                    })
                        .then(response => {
                            _this.interestDatas = response.data;

                            for (var i = 0; i < _this.interestDatas.length; i++) {

                                switch (_this.interestDatas[i].status) {
                                    case 1:
                                        if (_this.focus.length < 3) {
                                            _this.focus.push(_this.interestDatas[i]);
                                        }
                                        break;
                                    case 2:
                                        if (_this.vacancy.length < 3) {
                                            _this.vacancy.push(_this.interestDatas[i]);
                                        }
                                        break;
                                    case 3:
                                        if (_this.blackList.length < 3) {
                                            _this.blackList.push(_this.interestDatas[i]);
                                        }
                                        break;
                                    default: break;

                                }
                            }
                        })
                        .catch(err => console.log(err))
                        .finally(console.log('完成'));
                },
                Vacancies: function () {
                    let _this = this;
                    let count = 0;
                    axios.get(`${webApi}/api/Vacancies/view`, {
                        params: {
                            id: _this.Id,
                        }
                    })
                        .then(response => {
                            for (var i = 0; i < response.data.length; i++) {
                                if(count<3){
                                    if (response.data[i].valid == true) {
                                        _this.application.push(response.data[i]);
                                        count++;
                                    }
                                }                             
                            }
                         


                        })
                        .catch(err => console.log(err))
                        .finally(console.log('完成'));
                },
                Login: function () {
                    let _this = this;
                    axios.get(`${webApi}/api/Enterprises/Id${this.Id}`)
                        .then(res => {
                            _this.datas = res.data;

                        })
                        .catch(err => console.log(err))
                        .finally(console.log('完成'));

                    axios.get(`${webApi}/api/Vacancies/view`, {
                        params: {
                            id: _this.Id,
                        }
                    })
                        .then(response => {               
                
                               _this.van = response.data;

                            
                            console.log(_this.van);
                        })
                        .catch(err => console.log(err))
                        .finally(console.log('完成'));
                },
                advertise: function () {
                    let _this = this;
                    let j;
                    let arr = []
                    sessionStorage.getItem("Id") ? j = 1 : j = 2;
                    axios.get(`${webApi}/api/Courses`)
                        .then(res => {
                            for (i = 0; i < j; i++) {
                                let item = {}
                                item = res.data[_this.random(res.data.length)]
                                item.courseIntro = item.courseIntro.substr(0, 80) + "..."
                                arr.push(item)
                            }
                            _this.advertiseArray = arr
                            console.log(_this.advertiseArray)
                        })
                },
                random(max) {
                    return Math.floor(Math.random() * max);
                },
            },
        })





    </script>
    }

