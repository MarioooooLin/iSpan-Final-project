@section Scripts{

    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.2/axios.min.js"></script>
    <script>
        const webApi = "https://localhost:7240"
        const appVue = new Vue({
            el: "#appVue",
            name: "appVue",
            data: {
                interestDatas: [],
                Id: sessionStorage.getItem("EmpId"),
                status: 0,
                application: [],
                focus: [],
                vacancy: [],
                blackList: [],
            },
            mounted: function () {
                let _this = this;
                _this.Information();
                _this.Vacancies();
            },
            methods: {
                Information: function () {
                    let _this = this;
                    axios.get(`${webApi}/api/EnterpriseInterests`, {
                        params: {
                            id: _this.Id,
                            status: _this.status,
                        }
                    })
                        .then(response => {
                            _this.interestDatas = response.data;
                            console.log(_this.interestDatas);
                            for (var i = 0; i < _this.interestDatas.length; i++) {

                                switch (_this.interestDatas[i].status) {
                                    case 1:
                                        if (_this.focus.length < 3) {
                                            _this.focus.push(_this.interestDatas[i]);
                                        }
                                        break;
                                    case 2:
                                        if (_this.vacancy.length < 3) {
                                            _this.vacancy.push(_this.interestDatas[i]);
                                        }
                                        break;
                                    case 3:
                                        if (_this.blackList.length < 3) {
                                            _this.blackList.push(_this.interestDatas[i]);
                                        }
                                        break;
                                    default: break;

                                }
                            }
                        })
                        .catch(err => console.log(err))
                        .finally(console.log('完成'));
                },
                Vacancies: function(){
                    let _this =this;
                    axios.get(`${webApi}/api/Vacancies/view`, {
                        params: {
                            id: _this.Id,
                        }
                    })
                        .then(response => {
                           
                            for(var i=0;i<3;i++)
                            {
                                _this.application.push(response.data[i]);
                            }
                            console.log(_this.application);

                        })
                        .catch(err => console.log(err))
                        .finally(console.log('完成'));
                },
            },
        })





    </script>
    }

