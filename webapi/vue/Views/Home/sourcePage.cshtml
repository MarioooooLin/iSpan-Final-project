    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.2/axios.min.js"></script>
    <script>
        const webApi = "https://localhost:7240"
        const appVue = new Vue({
            el: "#appVue",
            name: "appVue",
            data: {
                datas: [], //文章本人
                nickName: "",
                message: "",
                title: "",
                articleMessage: [], //文章留言
                title: ''
            },
            mounted: function () {
                let _this = this;
                _this.Article();

            },
            methods: {
                Article: function () {
                    let _this = this;
                    let articleId = new URL(location.href).searchParams.get('id');
                    axios.get(`${webApi}/api/Articles/${articleId}`)
                        .then(response => {
                            this.title = response.data[0].title;
                            this.datas = response.data[0];
                            console.log(this.datas);
                            console.log(this.title)
                            _this.getMessage();
                        })
                        .catch(err => console.log(err))
                        .finally(console.log('完成'))
                },

                getMessage() {
                    let _this = this;
                    let articleId = new URL(location.href).searchParams.get('id');
                    axios.get(`${webApi}/api/Articles/id`)
                        .then(res => {
                            console.log(res.data)
                            for (let i = 0; i < res.data.length; i++) {
                                if (res.data[i].title == this.title && res.data[i].img == null) {
                                    let message = {};
                                    console.log(res.data[i]);
                                    message = res.data[i];
                                    this.articleMessage.push(message);
                                    console.log(this.articleMessage);
                                }
                            }
                        })
                        .catch(err => console.log(err))
                        .finally(console.log('完成'))

                },


                post() {
                    let messageContent = {};
                    let Time = new Date();
                    this.articleMessage.length += 1;

                    //messageContent.ArticleId=0;
                    //messageContent.nickName = this.nickName;
                    //messageContent.message = this.message;
                    //console.log(messageContent.nickName)
                    //console.log(messageContent.message)

                    messageContent.NickName = this.nickName;
                    messageContent.Message = this.message;
                    messageContent.Title = this.datas.title;
                    messageContent.ArticleFloor = this.articleMessage.length;
                    messageContent.UpdateTime = Time;
                    messageContent.AuthorId = 1;

                    console.log(messageContent) //檢查留言

                    axios.post(`${webApi}/api/Articles`, messageContent)
                        .then(res => {
                            console.log(res)
                            if (res.status < 300) {
                                window.location.replace(location.href)
                            }
                        })
                        .catch(err => { console.log(err) })

                    document.getElementById("name").value = "";
                    document.getElementById("message").value = "";


                    //axios.post(`${webApi}/api/Articles`, { params: messageContent })
                    //    .then(response => {
                    //        console.log(response)
                    //    })
                    //    .catch(err => console.log(err))

                },

                deleteMessage(articleId) {
                    let _this = this;
                    var reply = confirm("刪除此留言?");
                    if (reply == true) {
                        axios.delete(`${webApi}/api/Articles/${articleId}`)
                            .then(res => {
                                if (res.status < 300) {
                                    window.location.replace(location.href)
                                }
                            })
                    }
                }
            }
        })
    </script>
